                    data-f_name="{{player_f_name}}" data-l_name="{{player_l_name}}" data-player_email="{{player_email}}"
                    data-player_id="{{pid}}" data-bs-toggle="modal" data-bs-target="#editPlayerView"
                    style="width: 200px; margin-top: 10px">
                    Edit</button>


                <a href="/players" type="button" class="btn btn-primary" style="width: 200px; margin-top: 10px">
                    Back to players</a>
            </div>

        </div>
    </div>


    <!-- Edit Player Modal -->
    <div class="modal fade" id="editPlayerView" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit player</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form class=" g-3 needs-validation" method="POST" action="/team/editProfilePlayer">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>First name</label>
                            <input type="text" id="f_name" class="form-control" name="f_name" required>
                        </div>
                        <div class="form-group">
                            <label>Last name</label>
                            <input type="text" id="l_name" class="form-control" name="l_name" required>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" id="p_email" class="form-control" name="p_email" required>
                        </div>
                        <input type="hidden" id="teamOption" class="form-control" name="teamOption" />
                        <div class="form-group pt-2">
                            <label for="">Select a team:</label>
                            <select id="selectTeamModel" class="btn">
                                <option value="0">default</option>
                                {{#each listOfTeamArray}}
                                <option value="{{this.Team_ID}}">{{this.Team_Name}}</option>
                                {{/each}}

                            </select>
                        </div>

                        <input type="hidden" id="p_id" class="form-control" name="p_id" required>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End of Edit Player Modal -->



