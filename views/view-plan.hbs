    <div class="d-flex" style="justify-content: space-evenly; flex-wrap:wrap; align-items: center">
        {{#each objectsA}}
        <div>
            {{#if pic_link}}
            <p style="font-size: 20px; display: block; margin-left: 30%; margin-right: 20%; width: 70%;">
                This sketch belongs to drill: {{drill_name}}</p>
