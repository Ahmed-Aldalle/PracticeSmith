    <div class="plan-title">
        <div class="row">

            <div class="column d-flex" style="justify-content:space-evenly;">
                <div>
                    <h2 style="font-size: 18px;"><span>{{planName}}</span></h2>
                    <h2 style="font-size: 18px;"><span>{{finalplandate}}</span></h2>
                    <h2 style="font-size: 18px;"><span>{{finalTime}}</span></h2>
                </div>
                <div>
                    <h2 style="font-size: 18px;"><span>{{stats1}}</span></h2>
                    <h2 style="font-size: 18px;"><span>{{stats2}}</span></h2>
                </div>
                <div>

                    <h2 style="font-size: 18px;"><span>{{stats3}}</span></h2>
                    <h2 style="font-size: 18px;"><span>{{stats4}}</span></h2>
                </div>
                <div>

                    <button type="button" class="btn btn-primary noprint" onclick="window.print()"
                        style="height: 35px; width: 55px; margin-left:15px;margin-top:10px">
                        <i class="bi bi-printer">

                        </i>
                    </button>
                </div>


            </div>
        </div>
        <hr style="width:100%;  border-top: solid 1px #000 !important;">
    </div>


    <div class="container pt-2">
        {{#each objectsA }}
        <div class="row text-center" style="width:auto; white-space:nowrap; break-inside: avoid;">
            <div class="col-md-1 pt-4">
                <div class="row">
                    <div class="column d-flex" style="justify-content:space-evenly;">

                        <div>
                            <h4 style="font-size: 16px;">{{startTime}}-{{endTime}}</h4>
                        </div>

                    </div>

                    <div class="column d-flex" style="justify-content:space-evenly;">
                        <div>
                            <h4 style="font-size: 16px;">{{drill_name}}</h4>
                        </div>
                    </div>

                    <div class="column d-flex" style="justify-content:space-evenly;">
                        <div>
                            <h4 style="font-size: 16px;">{{drill_type}}</h4>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-11">
                <div class="row" style="flex-wrap:wrap">
                    <div class="column d-flex" style="justify-content:space-evenly; padding-left: 70px;">
                        {{#each positions}}
                        <div>
                            <h4 style="font-size: 16px;">{{this}}</h4>
                            {{#if this}}
                            <hr style="width:150px;  border-top: solid 1px #000 !important;">
                            {{/if}}
                        </div>
                        {{/each}}

                    </div>
                    <div class="column d-flex" style="justify-content:space-evenly;">
                        {{#each player_name}}
                        <div>
                            {{#each this}}
                            <h4 style="font-size: 16px; position: static; padding-left: 35px;">{{this}}</h4>
                            {{/each}}

                        </div>
                        {{/each}}

                    </div>

                    <div class="column d-flex pt-2" style="justify-content:space-evenly; ">
                        <div>
                            <h4 style="font-size: 16px;"><strong>Notes: </strong> {{notes_comments}}</h4>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <hr style="width:100%;  border-top: solid 1px #000 !important;">
        {{/each}}

    </div>



